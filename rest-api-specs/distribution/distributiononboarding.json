          }
        ],
        "responses": {
          "200": {
            "description": "Get Property Status.",
            "headers": {
              "Location": {
                "type": "string",
                "description": "Location of the resource",
                "x-example": "/onboard/v1/hotels/{hotelCode}/propertyStatus"
              },
              "Content-Language": {
                "type": "string",
                "description": "Response language",
                "pattern": "[a-zA-Z]{1,8}(-[a-zA-Z0-9]{1,8})*",
