  "definitions": {
    "businessEvents": {
      "type": "object",
      "description": "Provides business event message dequeued from BE queue as response",
      "properties": {
        "businessEventData": {
          "description": "List of BusinessEvents dequeued for given external system",
          "type": "array",
          "items": {
            "$ref": "#/definitions/businessEventDataType"
          }
        },
        "links": {
          "type": "array",
